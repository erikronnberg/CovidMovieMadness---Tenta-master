@model CovidMovieMadness___Tenta.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
    </dl>
</div>
<div>
    <h4>Review</h4>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Rating")
            </th>
            <td>
                @Html.DisplayFor(model => model.Post.ReviewRating)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Post.PostContent)
            </td>
        </tr>
    </table>
</div>
<div>
    @{ IEnumerable<CovidMovieMadness___Tenta.Models.Comment> comments = ViewData["Comments"] as IEnumerable<CovidMovieMadness___Tenta.Models.Comment>; }
    <h4>Comments</h4>
    <table class="table">
        <tr>
            <th>Username</th>
            <th>Rating</th>
            <th>Comment</th>
        </tr>
        @try
        {
            foreach (CovidMovieMadness___Tenta.Models.Comment comment in comments)
            {
                <tr>
                    <td>@comment.Username</td>
                    <td>@comment.UserRating</td>
                    <td>@comment.CommentContent</td>
                </tr>

            }
        }
        catch (NullReferenceException) { }
    </table>
</div>

@try
{
    if (Model.Post.PostContent.IsEmpty() == true) { }
    else
    {
        <p>
            @Html.ActionLink("Edit movie", "Edit", new { id = Model.ID }) |
            @Html.ActionLink("Back to List", "Index") |
            @Html.ActionLink("Edit review", "Edit", "Post", new { id = Model.ID }, null) |
            @Html.ActionLink("Delete review", "Delete", "Post", new { id = Model.ID }, null) | 
            @Html.ActionLink("Add comment", "Create", "Comment", new { id = Model.ID }, null)

        </p>
    }
}
catch (NullReferenceException)
{
    <p>
        @Html.ActionLink("Edit movie", "Edit", new { id = Model.ID }) |
        @Html.ActionLink("Back to List", "Index") |
        @Html.ActionLink("Create review", "Create", "Post", new { id = Model.ID }, null)
    </p>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}